@using RPS.Web.Models.Routing;
@model IEnumerable<RPS.Core.Models.PtItem>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2">Backlog</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            @Html.ActionLink("My Items", "Items", new { preset = "My" }, new { @class = "btn btn-secondary" })
            @Html.ActionLink("Open Items", "Items", new { preset = "Open" }, new { @class = "btn btn-secondary" })
            @Html.ActionLink("Done Items", "Items", new { preset = "Closed" }, new { @class = "btn btn-secondary" })
        </div>

        <div class="btn-group mr-2">
            @Html.ActionLink("Add", "Create", null, new { @class = "btn btn-secondary" })
        </div>

    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-sm table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Assignee</th>
                <th>Title</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Estimate</th>
                <th>Created</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Assignee.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priority)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estimate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>


                    <td>
                        @Html.ActionLink("Details", "Detail", new { id = item.Id, screen = DetailScreenEnum.Details })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



